<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".newProductFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/newproduct"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="100dp"
            android:src="@mipmap/newproducts"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.241" />

        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/fresh_parrot_green"
            android:layout_height="wrap_content"
            android:text="Sorry There is No New Products Yet"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newproduct"
            app:layout_constraintVertical_bias="0"
            android:textAlignment="center"
            android:fontFamily="@font/aclonica"
            tools:layout_editor_absoluteX="45dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>
